<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="MailApp">
  <Id>efb57cb5-19a9-427e-ac04-3a64848115d2</Id>
  <Version>1.0.0</Version>
  <ProviderName>Galleo</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Galleo Assist"/>
  <Description DefaultValue="Trademark Galleo Assistant"/>
  <IconUrl DefaultValue="https://localhost:3099/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3099/icon-128.png"/>
  <SupportUrl DefaultValue="https://www.contoso.com"/>
  <AppDomains>
    <AppDomain>contoso.com</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3099"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="commandsUrl" />
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="createDraftResponse">
                  <Label resid="createDraftResponse.Label"/>
                  <Supertip>
                    <Title resid="createDraftResponse.Label"/>
                    <Description resid="createDraftResponse.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="taskPaneUrl"/>
                    <SupportsPinning>false</SupportsPinning>
                  </Action>
                  <Keytip resid="createDraftResponse.Keytip"/>
                  <Shortcuts>
                    <Shortcut resid="createDraftResponse.Shortcut"/>
                  </Shortcuts>
                </Control>
                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>action</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://localhost:3099/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://localhost:3099/icon-32.png"/>
        <bt:Image id="icon80" DefaultValue="https://localhost:3099/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="taskPaneUrl" DefaultValue="https://localhost:3099/taskpane"/>
        <bt:Url id="commandsUrl" DefaultValue="https://localhost:3099/command"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Galleo Assistant d"/>
        <bt:String id="createDraftResponse.Label" DefaultValue="Create Draft Response"/>
        <bt:String id="createDraftResponse.Keytip" DefaultValue="X"/>
        <bt:String id="ActionButton.Label" DefaultValue="Perform an action"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="createDraftResponse.Tooltip" DefaultValue="Creates a draft response for the selected email."/>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Perform an action when clicked."/>
        <bt:String id="createDraftResponse.Shortcut" DefaultValue="Ctrl+Shift+X"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>

</OfficeApp> 